Execute (create simple weapon):
  let weapongen = vimcastle#weapongen#create('Swrd.', 'Sword', 4, 8)

Execute (invoke weapon):
  let weapon = weapongen.invoke()

Then (weapon is created):
  AssertEqual 'Swrd.', weapon.name.short
  AssertEqual 'Sword', weapon.name.long
  AssertEqual 4, weapon.dmg.min
  AssertEqual 8, weapon.dmg.max

Execute (add a modifier):
  let weapongen = weapongen.prefix(1, 'Rust.', 'Rusted', -2, -3)

Execute (invoke modified weapon):
  let weapon = weapongen.invoke()

Then (modified weapon is created):
  AssertEqual 'Rust. Swrd.', weapon.name.short
  AssertEqual 'Rusted Sword', weapon.name.long
  AssertEqual 2, weapon.dmg.min
  AssertEqual 5, weapon.dmg.max
