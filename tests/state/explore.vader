Execute (setup):
  let state = vimcastle#state#create()
  call state.enter('explore')

Then (has actions):
  AssertEqual [{'label': 'Inventory', 'key': 'i'}, {'label': 'Character Sheet', 'key': 's'}], state.actions().display

Execute (access inventory):
  call state.actions().invokeByKey('i', state)
  AssertEqual 'inventory', state.screen

Execute (setup):
  let state = vimcastle#state#create()
  call state.enter('explore')

Execute (access character sheet):
  call state.actions().invokeByKey('s', state)
  AssertEqual 'sheet', state.screen

