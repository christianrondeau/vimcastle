Execute (setup):
  let state = vimcastle#state#create()
  call state.enter('sheet')

Then (has actions):
  AssertEqual [{'label': 'Inventory', 'key': 'i'}, {'label': 'Back', 'key': 'b'}], state.actions().display

Execute (go back):
  call state.actions().invokeByKey('b', state)
  AssertEqual 'explore', state.screen

Execute (setup):
  call state.enter('sheet')

Execute (access inventory):
  call state.actions().invokeByKey('i', state)
  AssertEqual 'inventory', state.screen
