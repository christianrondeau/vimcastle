Execute (setup):
  let state = vimcastle#state#create()
  let state.stats = {
    \ 'events': 1,
    \ 'scenes': 2,
    \ 'fights': 3,
    \}
  call state.enter('gameover')

Then (score is calculated):
  AssertEqual 72, state.stats.score

Execute (restart):
  call state.actions().invokeDefault(state)

Then (restarts game):
  AssertEqual 'intro', state.screen
  Assert !exists('state.player')
